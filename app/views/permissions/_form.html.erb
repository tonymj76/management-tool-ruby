 <%= form_with(url: permissions_update_path(), local: true) do |f| %>
    <%= f.label "Select Permission(s)" %><br />
    <%= f.hidden_field :col_id, value: @col.id %>
    <%= f.collection_check_boxes :permission_ids, @permissions, :id, :name do |b| %>
        <div class="collection-check-box">
        <% state = @perms.include?(b.value) %>
        <%= b.check_box(checked: state) %>
        <%= b.label %>
        </div>
    <% end %>
    <%= button_tag type: 'submit', class: "btn btn-sm btn-success", title: "Update Permissions" do %>
        <span class="mt-1 ml-1"> Update <i class="fas fa-check"></i></span>
    <% end %>
<% end %>