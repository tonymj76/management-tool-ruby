<!-- Gallery -->
<!-- 
Gallery is linked to lightbox using data attributes.

To open lightbox, this is added to the gallery element: {data-toggle="modal" data-target="#exampleModal"}.

To open carousel on correct image, this is added to each image element: {data-target="#carouselExample" data-slide-to="0"}.
Replace '0' with corresponding slide number.
-->

<div class="row" id="gallery" data-toggle="modal" data-target="#exampleModal">
  <% @project.uploads.each do |upload| %>
    <div class="col-md-2 col-sm-2">
      <%= image_tag upload, class: "w-100","data-target"=>"#carouselExample", "data-slide-to"=> @project.uploads.find_index(upload) %>
    </div>
  <% end %>
</div>

<!-- Modal -->
<!-- 
This part is straight out of Bootstrap docs. Just a carousel inside a modal.
-->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="carouselExample" class="carousel slide" data-ride="carousel">
        
          <ol class="carousel-indicators">
            <% @project.uploads.each_with_index do |upload, i| %>
              <li data-target="#carouselExample" data-slide-to="<%=i%>" class="active"></li>
            <% end %>
          </ol>

          <div class="carousel-inner">
              <div class="carousel-item active">
            <% @project.uploads.each do |upload| %>
                <%= link_to image_tag(upload), upload, class: "d-block w-100" %>
                <%#= link_to upload.purge,class: 'btn btn-dark btn-sm', title: 'Delete' do %>
                <i class="fas fa-trash"></i>
                <%# end %>
            <% end %>
              </div>
          </div>

          <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

